<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!-- 图标  -->
    <ImageView
        android:id="@+id/baselayout_iv_left"
        style="@style/head_common_iv_left"
        android:layout_centerVertical="true"
        android:scaleType="center"
        android:src="@drawable/back_bnt" />

    <TextView
        android:id="@+id/baselayout_tv_title"
        style="@style/head_common_tv_title"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:maxWidth="240dip"
        android:singleLine="true"
        android:textColor="@color/white_a"
        android:textSize="@dimen/head_center_font_size"
        tools:text="@string/app_name" />

    <TextView
        android:id="@+id/baselayout_tv_right"
        style="@style/head_common_tv_title"
        android:layout_alignParentRight="true"
        android:textSize="16sp"
        android:layout_marginRight="10dp"
        android:gravity="center_vertical"
        android:textColor="@color/white_a"
        android:visibility="gone" />
</merge>